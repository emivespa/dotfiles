! xrdb ~/.Xresources

! --------------------------------------------------------------------------------

! ## urxvt
!
! https://wiki.archlinux.org/title/Rxvt-unicode

urxvt.clipboard.autocopy: true
urxvt.scrollBar: false

! Only cut on whitespace and Tmux's box drawing pipe:
urxvt.cutchars: " 	â”‚"

! --------------------------------------------------------------------------------

! ## xterm
!
! https://wiki.archlinux.org/title/Xterm
!
! TODO: https://vermaden.wordpress.com/2021/05/19/freebsd-desktop-part-25-configuration-random-terminal-theme/

XTerm.Maximized: true
XTerm.vt100.Geometry: 80x24
XTerm.vt100.cursorBlink: never
XTerm.vt100.font: xft:Go Mono:size=11

! Colors, "Selenized high contrast dark":
XTerm.vt100.background:  #103c48
XTerm.vt100.color0:      #103c48
XTerm.vt100.color1:      #ed4a46
XTerm.vt100.color2:      #70b433
XTerm.vt100.color3:      #dbb32d
XTerm.vt100.color4:      #368aeb
XTerm.vt100.color5:      #eb6eb7
XTerm.vt100.color6:      #3fc5b7
XTerm.vt100.color7:      #72898f
XTerm.vt100.color8:      #2d5b69
XTerm.vt100.color9:      #ff5e56
XTerm.vt100.color10:     #83c746
XTerm.vt100.color11:     #efc541
XTerm.vt100.color12:     #4f9cfe
XTerm.vt100.color13:     #ff81ca
XTerm.vt100.color14:     #56d8c9
XTerm.vt100.color15:     #dedede
XTerm.vt100.foreground:  #dedede

! Have Alt work as espected:
XTerm.vt100.metaSendsEscape: true

! Have Ctrl+Shift+x/c/v work as expected:
XTerm.VT100.Translations: #override\n\
	Shift Ctrl <KeyPress> x: cut-selection(CLIPBOARD)\n\
	Shift Ctrl <KeyPress> c: copy-selection(CLIPBOARD)\n\
	Shift Ctrl <KeyPress> v: insert-selection(CLIPBOARD)\n

! Support UTF-8 <https://wiki.archlinux.org/title/Locale#My_terminal_does_not_support_UTF-8>:
XTerm.utf8: 2
